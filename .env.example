# Master Agent Orchestrator - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development

# =============================================================================
# OPENAI CONFIGURATION
# =============================================================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORGANIZATION=your_org_id_here
OPENAI_PROJECT=your_project_id_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_TIMEOUT=30.0
OPENAI_MAX_RETRIES=3

# =============================================================================
# ORCHESTRATOR SETTINGS
# =============================================================================
MAX_CONCURRENT_AGENTS=10
DEFAULT_MODEL=gpt-4o
ENABLE_LOGGING=true
LOG_LEVEL=INFO
LOG_FILE=master_orchestrator.log
TASK_TIMEOUT=300.0
AGENT_IDLE_TIMEOUT=3600.0

# =============================================================================
# TOOL REGISTRY SETTINGS
# =============================================================================
TOOL_ENABLE_METRICS=true
TOOL_MAX_HISTORY=1000
TOOL_DEFAULT_TIMEOUT=60.0
TOOL_RATE_LIMIT_WINDOW=60
BUILTIN_TOOLS_ENABLED=true
CUSTOM_TOOLS_DIR=./custom_tools

# =============================================================================
# ERROR HANDLING SETTINGS
# =============================================================================
ENABLE_CIRCUIT_BREAKERS=true
ENABLE_AUTO_RECOVERY=true
MAX_ERROR_HISTORY=1000
CIRCUIT_FAILURE_THRESHOLD=5
CIRCUIT_RECOVERY_TIMEOUT=60.0
RETRY_MAX_ATTEMPTS=3
RETRY_INITIAL_DELAY=1.0
RETRY_MAX_DELAY=60.0
RETRY_BACKOFF_FACTOR=2.0

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ENABLE_AUTH=false
API_KEY_HEADER=X-API-Key
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_PER_MINUTE=100
MAX_REQUEST_SIZE=10485760
ENABLE_CORS=true

# =============================================================================
# MONITORING SETTINGS
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=8090
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30.0
ENABLE_TRACING=false
JAEGER_ENDPOINT=http://localhost:14268/api/traces
PROMETHEUS_ENABLED=true

# =============================================================================
# DATABASE SETTINGS (OPTIONAL)
# =============================================================================
DATABASE_ENABLED=false
DATABASE_URL=postgresql://user:password@localhost:5432/orchestrator_db
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30.0
DB_ECHO=false

# =============================================================================
# REDIS SETTINGS (OPTIONAL)
# =============================================================================
REDIS_ENABLED=false
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_MAX_CONNECTIONS=10

# =============================================================================
# DEVELOPMENT SPECIFIC SETTINGS
# =============================================================================
# Uncomment for development mode
# LOG_LEVEL=DEBUG
# MAX_CONCURRENT_AGENTS=3
# ENABLE_AUTH=false

# =============================================================================
# PRODUCTION SPECIFIC SETTINGS
# =============================================================================
# Uncomment for production mode
# LOG_LEVEL=INFO
# MAX_CONCURRENT_AGENTS=20
# ENABLE_AUTH=true
# RATE_LIMIT_PER_MINUTE=1000
# DATABASE_ENABLED=true
# REDIS_ENABLED=true
# PROMETHEUS_ENABLED=true